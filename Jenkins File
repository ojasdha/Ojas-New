pipeline {
    agent any
    environment {
    NODE_VERSION = 'v20.13.1'
    }
    tools {
        nodejs "${v20.13.1}"
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the source control
                git 'https://github.com/ojasdha/Ojas-New.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                // Run unit tests
                sh 'npm test'
            }
        }
        stage('Build') {
            steps {
                // Build the project
                sh 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                sh 'npm run deploy'
            }
        }
    }
    post {
        success {
            echo 'Deployment succeeded!'
        }
        failure {
            echo 'Deployment failed!'
        }
        always {
            cleanWs()
        }
    }
}


