pipeline {
    agent any
    environment {
    NODE_VERSION = 'v20.13.1'
    }
    tools {
        nodejs "${v20.13.1}"
    }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('install express') {
            steps {
                sh 'npm install express'
            }
        }
        stage('install dotenv') {
            steps {
                sh 'npm install dotenv'
            }
        }
        stage('Deploy') {
            steps {
                sh 'node index.js'
            }
        }
    }
    post {
        success {
            echo 'Deployment succeeded!'
        }
        failure {
            echo 'Deployment failed!'
        }
        always {
            cleanWs()
        }
    }
}


